{
  "name": "zotero-export-pdf",
  "type": "module",
  "version": "1.0.6",
  "description": "quick export pdf for zotero",
  "config": {
    "addonName": "zotero export pdf",
    "addonID": "addontemplate@euclpts.com",
    "addonRef": "addontemplate",
    "addonInstance": "AddonTemplate",
    "prefsPrefix": "extensions.zotero.addontemplate"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/guokelei1/zotero-quick-copy-pdf.git"
  },
  "author": "guokelei1",
  "bugs": {
    "url": "https://github.com/guokelei1/zotero-quick-copy-pdf/issues"
  },
  "homepage": "https://github.com/guokelei1/zotero-quick-copy-pdf#readme",
  "license": "AGPL-3.0-or-later",
  "scripts": {
    "start": "zotero-plugin serve",
    "build": "zotero-plugin build && tsc --noEmit",
    "lint:check": "prettier --check . && eslint .",
    "lint:fix": "prettier --write . && eslint . --fix",
    "release": "zotero-plugin release",
    "test": "echo \"Error: no test specified\" && exit 1",
    "update-deps": "npm update --save"
  },
  "dependencies": {
    "zotero-plugin-toolkit": "^4.1.2"
  },
  "devDependencies": {
    "@eslint/js": "^9.23.0",
    "@types/node": "^22.13.13",
    "eslint": "^9.23.0",
    "prettier": "^3.5.3",
    "typescript": "^5.8.2",
    "typescript-eslint": "^8.27.0",
    "zotero-plugin-scaffold": "^0.4.1",
    "zotero-types": "^3.1.9"
  },
  "prettier": {
    "printWidth": 80,
    "tabWidth": 2,
    "endOfLine": "lf",
    "overrides": [
      {
        "files": [
          "*.xhtml"
        ],
        "options": {
          "htmlWhitespaceSensitivity": "css"
        }
      }
    ]
  }
}